<div class="nk-header nk-header-fixed is-light">
    <div class="container-fluid">
        <div class="nk-header-wrap">
            <div class="nk-menu-trigger d-xl-none ml-n1">
                <a href="#" class="nk-nav-toggle nk-quick-nav-icon" data-target="sidebarMenu">
                    <twig:Dashlite:Icon name="menu"/>
                </a>
            </div>
            <div class="nk-header-brand">
                <a href="/" class="logo-link">
                    <img class="logo-light logo-img" src="{{ asset(devscast_dashlite.application.logo_path) }}" alt="logo">
                </a>
            </div>
            <twig:block name="navbar_content"></twig:block>
           <twig:block name="navbar_user">
               <div class="nk-header-tools">
                   <ul class="nk-quick-nav">
                       <twig:block name="navbar_tool_list"></twig:block>
                       {% if app.user %}
                           <li class="dropdown user-dropdown">
                               <a href="#" class="dropdown-toggle mr-n1" data-bs-toggle="dropdown" aria-expanded="false">
                                   <div class="user-toggle">
                                       <div class="user-avatar sm">
                                           <twig:Dashlite:Icon name="user"/>
                                       </div>
                                       <div class="user-info d-none d-xl-block">
                                           <div class="user-status user-status-verified">{{ app.user.roles | last | trans([], 'messages') }}</div>
                                           <div class="user-name dropdown-indicator">{{ app.user.email }}</div>
                                       </div>
                                   </div>
                               </a>
                               <div class="dropdown-menu dropdown-menu-md dropdown-menu-right">
                                   <div class="dropdown-inner user-card-wrap bg-lighter d-none d-md-block">
                                       <div class="user-card">
                                           <div class="user-avatar">
                                               <twig:Dashlite:Icon name="user"/>
                                           </div>
                                           <div class="user-info">
                                               <span class="sub-text">{{ app.user.userIdentifier }}</span>
                                               <span class="sub-text">{{ app.user.email }}</span>
                                           </div>
                                       </div>
                                   </div>
                                   <div class="dropdown-inner">
                                       <ul class="link-list">
                                           <li>
                                               <a href="#" title="Paramètres">
                                                   <twig:Dashlite:Icon name="setting"/>
                                                   <span>Paramètres</span>
                                               </a>
                                           </li>
                                           <li>
                                               <a href="{{ logout_url('main') }}" title="Déconnexion" aria-label="Déconnexion">
                                                   <span>Déconnexion</span>
                                               </a>
                                           </li>
                                       </ul>
                                   </div>
                               </div>
                           </li>
                       {% endif %}
                   </ul>
               </div>
           </twig:block>
        </div>
    </div>
</div>
