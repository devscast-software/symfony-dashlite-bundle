<div {{ stimulus_controller('modal-form') }}>
    <button {{ stimulus_action('modal-form', 'open') }} class="btn btn-white btn-dim btn-outline-light">
        <twig:Dashlite:Icon name="{{ this.icon }}"/>
        <span>{{ this.name }}</span>
    </button>
    {% if this.path and this.name %}
        <twig:Dashlite:Card:Modal action="{{ this.name }}" path="{{ this.path }}" position="{{ this.position }}" size="{{ this.size }}" />
    {% endif %}
</div>
